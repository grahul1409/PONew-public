{
  "name": "ponew",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "https://github.com/grahul1409/PONew-public",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2.1.2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4",
    "passport": "^0.7"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "mbt": "^1.2.34",
    "@sap/cds-dk": "^9",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-po-approve": "cds watch --open po-approve/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project2": "cds watch --open project2/webapp/index.html?sap-ui-xx-viewCache=false",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-project3": "cds watch --open project3/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy PONew --delete-services --delete-service-keys --delete-service-brokers"
  },
  "sapux": [
    "app/po-approve",
    "app/po-approve",
    "app/project1",
    "app/project2",
    "app/project3"
  ]
}